@using Peluqueria_Calibrum.Models
@model IEnumerable<EmpleadoModel>
@{
    ViewData["Title"] = "Empleado";
}
<head>

<link rel="stylesheet" href="~/css/vistas.css">


</head>

<div class="card">
    <div class="card-header">
        <div class="card-title">
            <a>Administrar <span>Empleados</span></a>
        </div>
        <div class="card-btn">
            <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#miEmpleado">
                <i class="fa-solid fa-circle-plus"></i>   
                Nuevo Empleado
            </a>
        </div>
        
    </div>
    
    <div class="card-body">
        <div class="row">
            <div class="col-auto">
                <div class="mt-2 form-floating">
                    <input id="fullname" type="text" class="form-control">
                    <label for="fullname">Nombre o Apellido</label>
                </div>
            </div>
            <div class="col-auto">
                <div class="mt-2 form-floating">
                    <input id="fullname" type="text" class="form-control">
                    <label for="fullname">Servicio</label>
                </div>
            </div>
            <div class="col-auto">
                <div class="mt-2 form-floating">
                    <select class="form-select">
                        <option value="" disabled selected></option>
                        <option value="Peluquero">Peluquero</option>
                        <option value="Barbero">Barbero</option>
                        <option value="Administrador">Administrador</option>
                    </select>
                    <label for="cargo">Cargo:</label>
                </div>
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-secondary btn-circle">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
            @*<label>Ingrese Contraseña</label>
            <div class="input-group password">
                <input ID="txtPassword" type="Password" Class="form-control" />
                <button id="show_password" class="btn btn-success" type="button" onclick="mostrarPassword()">
                    <span class="fa fa-eye-slash icon"></span>
                </button>
            </div>*@
        </div>
        <div class="table-responsive">
            <table class="styled-table table-sm">
                <thead>
                    <tr>
                        <th>Nombre y Apellido</th>
                        <th>Usuario</th>
                        <th>Servicios</th>
                        <th>Horarios</th>
                        <th>Cargo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.Nombre @item.Apellido</td>
                            <td>@item.Usuario</td>
                            <td>@item.Servicios</td>
                            <td>@item.Hora @item.Dias</td>
                            <td>@item.Cargo</td>
                            <td>
                                <a class="btn btn-warning">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a class="btn btn-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade " id="miEmpleado" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content rounded-2  align-items-center">
                <div class="modal-header">
                    <h2 class="modal-title fw-bold">Agregar Nuevo Empleado</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/Empleado/InsertEmpleado" method="post">
                    <div class="modal-body">
                        <div class="form-group mb-3">
                            <label class="form-label" for="Nombre">Nombre</label><br />
                            <input type="text" class="form-control" id="nombre" name="Nombre" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label" for="Apellido">Apellido</label><br />
                            <input type="text" class="form-control" id="apellido" name="Apellido" />
                        </div>
                    <hr>
                        <div class="form-group mb-3">
                            <label class="form-check-label"> Seleccione el cargo del nuevo empleado:</label> </br>
                            <select class="form-select" name="Cargo" aria-label="Cargo">
                                <option disabled selected>Cargo</option>
                                <option value="Peluquero">Peluquero</option>
                                <option value="Barbero">Barbero</option>
                                <option value="Administrador">Administrador</option>
                            </select>
                        </div>
                    <hr>
                        <div class="form-group mb-3">
                            <label class="form-check-label"> Seleccione los servicios que realizara:</label> </br>
                            <select class="form-select" name="Servicios" aria-label="Servicios">
                                <option disabled selected>Servicios</option>
                                <option value="Corte Infantil">Corte Infantil</option>
                                <option value="Decoloracion">Decoloracion</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <table class="table table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Servicios</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Corte de Cabello</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    <hr>
                        <div class="form-group mb-3">
                            <label class="form-label" for="Hora">Horario</label><br />
                            <input type="text" class="form-control" id="hora" name="Hora" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label" for="Dias">Dias</label><br />
                            <input type="text" class="form-control" id="dias" name="Dias" />
                        </div>
                        <hr>
                        <div>
                            <h3 class="modal-title">Inicio de Sesion</h3>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Usuario">Usuario</label>
                            <input type="email" class="form-control" id="usuario" name="Usuario">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Contrasena">Contraseña</label>
                            <input type="password" class="form-control" id="contrasena" name="Contrasena">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            Crear Empleado
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


