        <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.21.4/dist/bootstrap-table.min.css">
    </head>
    <body>
        <div class="text-center">
            <div>
                <h1>Lista Empleado</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4" style="padding-bottom:10px">
                <label for="nombre">Nombre o Apellido</label><br />
                <input type="text" name="search" />
            </div>
            <div class="col-sm-4">
                <label for="nombre">Servicio</label><br />
                <input type="text" name="search" />
            </div>
            <div>
                <select id="cargo" name="cargo">
                    <option value="">Cargo</option>
                    <option value="peluquero">Peluquero</option>
                    <option value="barbero">Barbero</option>
                </select>
            </div>
            <div class="col-sm-4">
                <button type="button" class="btn btn-outline-dark form-control" data-toggle="modal" data-target="#miEmpleado">Agregar Empleado</button>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Nombre y Apellido</th>
                    <th>Usuario</th>
                    <th>Servicios</th>
                    <th>Horarios</th>
                    <th>Cargo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <button type="button" class="btn btn-warning">
                            Modificar
                        </button>
                        <button type="button" class="btn btn-danger">
                            Eliminar
                        </button>
                    </td>
                    <td>@item.Nombre @item.Apellido</td>
                    <td>@item.Usuario</td>
                    <td></td>
                    <td>@item.Horario</td>
                    <td>@item.Cargo</td>
                </tr>
            }
                    
                
               
            </tbody>
        </table>
