    <body>
        <div class="text-center">
            <div>
                <h1>Listado Inventario</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6" style="padding-bottom:10px">
                <div class="row">
                    <div class="col-sm-4">
                        <label for="nombre">Nombre</label><br />
                        <input type="text" name="search" />
                    </div>
                    <div class="col-sm-4" style="padding-left:25px">
                        <label for="nombre">Descripcion</label><br />
                        <input type="text" name="search" />
                    </div>
                    <div class="col-sm-4" style="padding-left:30px">
                        <br />
                        <input type="submit" value="Buscar" class="btn btn-dark" />
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                <br />
                <button type="button" class="btn btn-outline-dark form-control" data-toggle="modal" data-target="#miInventario">Nuevo Articulo</button>
            </div>
         </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
                 @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <button type="button" class="btn btn-warning">
                            Modificar
                        </button>
                        <button type="button" class="btn btn-danger">
                            Eliminar
                        </button>
                    </td>
                    <td>@item.Imagen</td>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Cantidad</td>
                </tr>
                }

                
            </tbody>
        </table>
