<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Peluqueria_Calibrum</title>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>

    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icono fontawesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Css-->
    <link rel="stylesheet" href="~/css/layoutclientes.css" asp-append-version="true" />

    <!-- Styles-->
    <link rel="stylesheet" href="~/Peluqueria_Calibrum.styles.css" asp-append-version="true" />
    
    <link rel="icon" href="~/images/Logo-Cuadrado.jpg" type="image/x-icon"/>
</head>

<body>

    <nav class="navbar navbar-expand-lg bg-white fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home">
                <img src="~/images/Logo-Cuadrado.jpg" width="65px" height="65px"/>
                Calibrum
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link  fw-bold" style="color:#0d47a1" href="#about">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  fw-bold" style="color:#0d47a1" href="#servicios">Servicios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  fw-bold" style="color:#0d47a1" href="#equipo">Equipo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  fw-bold" style="color:#0d47a1" href="/Agendar">Agendar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  fw-bold" style="color:#0d47a1"href="#contacto">Contacto</a>
                    </li>
                </ul>
                <div class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <a class="btn btn-outline" href="/Inicio/CitasHoy">Login</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Banner -->
    <div class="banner-imagen">
        <div class="banner-texto">
            <h3 style="font-size:40px">Bienvenidos a</h3>
            <h1 style="font-size:80px">Calibrum</h1>
        </div>
        <div class="banner-button">
            <a role="button" class="btn btn-primary btn-lg text-uppercase fw-bold" href="/Agendar">Agenda tu hora</a>
        </div>
    </div>

    <!-- About -->
    <section class="about py-5" id="about" style="background:#e4e5e6;">
        <div class="container-lg py-4">
            <div class="row  align-content-center align-items-center">
                <div class="col-md-6 mt-0 mt-md-0" >
                    <div class="about-image text-center">
                        <img class="mw-100" src="~/images/pelo.jpg" alt="Imagen">
                    </div>
                </div>
                <div class="col-md-6 mt-md-0 order-md-first">
                    <div class="about-text">
                        <h1 class="text-uppercase fs-1" style="color:#0d47a1">Nosotros</h1>
                        <h2 class="fs-4">Barberia / Peluqueria</h2>
                        <p class="mt-4 text-muted">
                            En Calibrum contamos con una amplia variedad de estilistas expertos en distintas áreas para ofrecer el mejor 
                            servicio posible a nuestros clientes. Al ser una Peluqueria y Barberia ofrecemos una amplia gama de servicios; cortes
                            de pelo, barba, peinados, coloración y decoloración entre otras cosas. Visítanos, nuestra ubicación es...
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Servicios -->
    <section id="servicios" class="servicios py-5 bg-white">
        <div class="container-sm py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-title text-center">
                        <h1 class=" mb-5">Servicios</h1>
                        <hr />

                    </div>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="servicio-item shadow-lg p-4 rounded bg-white">
                        <div class="icon my-3 fs-2">
                            <img src="~/images/icon/hair-clipper.png" width="100px" height="100px" alt="corte" />
                        </div>
                        <h3 class="fs-5 py-2">Corte de cabello</h3>
                        <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit <b>$10.000</b></p>
                    </div>
                </div> 
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="servicio-item shadow-lg p-4 rounded bg-white">
                        <div class="icon my-3 fs-2">
                            <img src="~/images/icon/razor.png" width="100px" height="100px" alt="perfilado" />
                        </div>
                        <h3 class="fs-5 py-2">Perfilado de barba</h3>
                        <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit <b>$10.000</b></p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="servicio-item shadow-lg p-4 rounded bg-white">
                        <div class="icon my-3 fs-2">
                            <img src="~/images/icon/barber-chair.png" width="100px" height="100px" alt="silla" />
                        </div>
                        <h3 class="fs-5 py-2">Servicio completo</h3>
                        <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit <b>$10.000</b></p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="servicio-item shadow-lg p-4 rounded bg-white">
                        <div class="icon my-3 fs-2">
                            <img src="~/images/icon/hair-color.png" width="100px" height="100px" alt="silla" />
                        </div>
                        <h3 class="fs-5 py-2">Coloracion</h3>
                        <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit <b>$10.000</b></p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="servicio-item shadow-lg p-4 rounded bg-white">
                        <div class="icon my-3 fs-2">
                            <img src="~/images/icon/hair-iron.png" width="100px" height="100px" alt="silla" />
                        </div>
                        <h3 class="fs-5 py-2">Alisado</h3>
                        <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit <b>$10.000</b></p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="servicio-item shadow-lg p-4 rounded bg-white">
                        <div class="icon my-3 fs-2">
                            <i class="fa-solid fa-question" style="height:100px; width:100px"></i>
                        </div>
                        <h3 class="fs-5 py-2">Lorem</h3>
                        <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit <b>$10.000</b></p>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Equipo -->
    <section id="equipo" class="equipo py-5" style="background:#e4e5e6;">
        <div class="container-sm py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-title text-center">
                        <h1 class="mb-5">Nuestro Equipo</h1>
                        <hr />
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">
                    <div id="carousel1" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carousel1" data-bs-slide-to="0" class="active bg-black" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carousel1" data-bs-slide-to="1" class="bg-black" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carousel1" data-bs-slide-to="2" class="bg-black" aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <!-- Item Start-->
                            <div class="equipo-item bg-white carousel-item active shadow-sm rounded p-4 mb-5 ">
                                <div class="equipo-info d-flex">
                                    <img src="~/images/Logo-Cuadrado.jpg" class="img-thumbnail rounded-circle" alt="1" height="100px" width="100px">
                                    <div class="info ms-3">
                                        <h3 class="fs-4 mb-1">Nicolas</h3>
                                        <p class="text-muted m-0">Peluquero</p>
                                    </div>
                                    <div class="redes">
                                        <i class="fa-brands fa-instagram fa-xl"></i>
                                        <i class="fa-brands fa-facebook fa-xl"></i>
                                        <i class="fa-brands fa-whatsapp fa-xl"></i>
                                    </div>
                                </div>
                                <p class="text-muted mt-3">Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
                            </div>
                            <!-- Item End-->
                            <!-- Item Start-->
                            <div class="equipo-item bg-white carousel-item shadow-sm rounded p-4 mb-5">
                                <div class="equipo-info d-flex">
                                    <img src="~/images/Logo-Cuadrado.jpg" class="img-thumbnail rounded-circle" alt="2" height="100px" width="100px">
                                    <div class="info ms-3">
                                        <h3 class="fs-4 mb-1">Cristobal</h3>
                                        <p class="text-muted m-0">Administrador</p>
                                    </div>
                                    <div class="redes">
                                        <i class="fa-brands fa-instagram fa-xl"></i>
                                        <i class="fa-brands fa-facebook fa-xl"></i>
                                        <i class="fa-brands fa-whatsapp fa-xl"></i>
                                    </div>
                                </div>
                                <p class="text-muted mt-3">Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
                            </div>
                            <!-- Item End-->
                            <!-- Item Start-->
                            <div class="equipo-item bg-white carousel-item shadow-sm rounded p-4 mb-5">
                                <div class="equipo-info d-flex">
                                    <img src="~/images/Logo-Cuadrado.jpg" class="img-thumbnail rounded-circle" alt="3" height="100px" width="100px">
                                    <div class="info ms-3">
                                        <h3 class="fs-4 mb-1">Elias</h3>
                                        <p class="text-muted m-0">Barbero</p>
                                    </div>
                                    <div class="redes">
                                        <i class="fa-brands fa-instagram fa-xl"></i>
                                        <i class="fa-brands fa-facebook fa-xl"></i>
                                        <i class="fa-brands fa-whatsapp fa-xl"></i>
                                    </div>
                                </div>
                                <p class="text-muted mt-3">Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
                            </div>
                            <!-- Item End-->
                        </div>
                    </div>
                </div>           
            </div>
        </div>
    </section>

    <!-- Contacto-->
    <section id="contacto" class="contacto py-5 bg-white">
        <div class="container-sm py-4">
            <div class="row">
                <div class="col-sm-4">
                    <figure>
                        <blockquote>
                            <h4 class="fw-bold">TE ESPERAMOS</h4>
                        </blockquote>
                        <figcaption class="blockquote-footer text-black">
                            <cite class="text-black" style="font-size:20px">Contáctanos</cite>
                        </figcaption>
                    </figure>
                    <div class="contact-item d-flex mb-3 ">
                        <div class="icon fs-4"><i class="fa-solid fa-envelope"></i></div>
                        <div class="ms-3">
                            <h3 class="fs-5">Correo</h3>
                            <p class="text-muted">calibrum@calibrum.cl</p>
                        </div>
                    </div>
                    <div class="contact-item d-flex mb-3 ">
                        <div class="icon fs-4"><i class="fa-solid fa-phone"></i></div>
                        <div class="ms-3">
                            <h3 class="fs-5">Telefono</h3>
                            <p class="text-muted">999999999</p>
                        </div>
                    </div>
                    <div class="contact-item d-flex mb-3 ">
                        <div class="icon fs-4"><i class="fa-solid fa-location-dot"></i></div>
                        <div class="ms-3">
                            <h3 class="fs-5">Direccion</h3>
                            <p class="text-muted">Lorem 111 Local 1, San Joaquin</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <figure>
                        <blockquote>
                            <h4 class="fw-bold text-uppercase">Horario</h4>
                        </blockquote>
                    </figure>
                    <div class="horario-inicio">
                        <h3 class="fs-5">Lunes a viernes</h3>
                        <p class="lead">10:00 am - 7:00 pm</p>
                    </div>
                    <div class="horario-fin">
                        <h3 class="fs-5">Sabado</h3>
                        <p class="lead">10:00 am - 5:00 pm</p>
                    </div>
                    <div class="cerrado">
                        <h3 class="fs-5">Domingo</h3>
                        <p class="lead"><em>Cerrado</em></p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <img src="~/images/Logo-Cuadrado-FondoBlanco.jpg" class="img-fluid" width="300px" height="300px" alt="Logo">
                </div>
            </div>
        </div>
    </section>


    <footer class="footer d-flex justify-content-center align-items-center text-center text-muted" style="background:#e4e5e6;">
        <p class="text-black">2023 - Peluqueria_Calibrum &copy; <br />Todos los derechos reservados</p>
    </footer>

    


    @RenderBody()

    <!-- jQuery, Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://kit.fontawesome.com/ba1c51d352.js" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js" integrity="sha512-pumBsjNRGGqkPzKHndZMaAG+bir374sORyzM3uulLV14lN5LyykqNk8eEeUlUkB3U0M4FApyaHraT65ihJhDpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>