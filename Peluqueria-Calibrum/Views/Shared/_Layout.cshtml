<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Peluqueria_Calibrum</title>

    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Icono fontawesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Css-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Styles-->
    <link rel="stylesheet" href="~/Peluqueria_Calibrum.styles.css" asp-append-version="true" />

    <!-- Materialize-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.21.4/dist/bootstrap-table.min.css">
    <link rel="stylesheet" href="~/css/animaciones.css">

</head>

<body>


    <!-- Navbar -->
    <header>
        <nav style="background-color:white">
            <div class="row">
                <div class="col-sm-12">
                    <a href="#menu-toggle" class="btn" id="menu-toggle"><i class="fa-solid fa-bars" style="color: #000000;"></i></a>
                    
                    <a class="navbar-brand"  asp-area="" asp-controller="Home" asp-action="Index" style="color:#f44336;font-family:'Harlow Solid';font-size:40px; text-align:center">Calibrum</a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li >
                            <label style="color: #000000;">[Usuario]</label>
                        </li>
                        <li>
                            <a style="color: #000000;" href="collapsible.html">Cerrar Sesión</a>
                        </li>
                    </ul>
                </div>
                
            </div>
            

        </nav>
    </header>

    
    <!-- Sidebar -->
    <div id="wrapper" >
        <div id="sidebar-wrapper">

            <ul class="sidebar-nav">
                <li>

                    <img src="~/images/Logo-Cuadrado.jpg" width="200px" height="200px" />

                </li>
                <li class="nav-title">
                    Mantenedores
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Empleado" asp-action="Empleado">
                        <i class="nav-icon fas fa-user"></i>
                        Empleados
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Citas" asp-action="Citas">
                        <i class="nav-icon fa-solid fa-calendar-days"></i>
                        Citas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Servicio" asp-action="Servicio">
                        <i class="nav-icon fa-solid fa-scissors"></i>
                        Servicios
                    </a>
                </li>
                <li class="nav-title">
                    Administracion
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Inventario" asp-action="Inventario">
                        <i class="nav-icon fa-solid fa-box"></i>
                        Inventario
                    </a>
                </li>
            </ul>
        </div>

    </div>


    <div class="container">
        <main role="main" class="pb-3" style="padding-top:50px">
            @RenderBody()
        </main>
    </div>
    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Peluqueria_Calibrum - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    -->
    
    
    <!-- jQuery, Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/bootstrap-table@1.21.4/dist/bootstrap-table.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@3.2.13/dist/vue.global.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <!-- Materialize -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>