@model Peluqueria_Calibrum.Models.Servicio

@{
    ViewData["Title"] = "Servicios";
}



<html>
<head>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.21.4/dist/bootstrap-table.min.css">
</head>
    <body>
        <div class="text-center">
            <div>
                <h1>Lista Servicio</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4" >
                <label for="servicio">Servicio</label><br />
                <input type="text" name="search" />
            </div>
            <div class="col-sm-4">
                <input type="submit" value="Buscar" class="btn btn-dark" />
                <button type="button" class="btn btn-outline-dark form-control" data-toggle="modal" data-target="#miServicio">Agregar Servicio</button>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Servicios</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <button type="button" class="btn btn-warning">
                            Modificar
                        </button>
                        <button type="button" class="btn btn-danger">
                            Eliminar
                        </button>
                    </td>
                    <td>Corte de Cabello</td>
                    <td>Cualquier corte de cabello</td>
                    <td>$5000</td>
                </tr>
                <tr>
                    <td>
                        <button type="button" class="btn btn-warning">
                            Modificar
                        </button>
                        <button type="button" class="btn btn-danger">
                            Eliminar
                        </button>
                    </td>
                    <td>Teñida de Cabello</td>
                    <td>Colores disponibles: <br />Negro - Moreno - Castaño Claro</td>
                    <td>$10.000</td>
                </tr>
            </tbody>
        </table>

        <div class="modal fade" id="miServicio" role="dialog">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div class="modal-content">
                    <form method="post" enctype="multipart/form-data">
                        <div class="modal-header">
                            <h2 class="modal-title text-primary text-center">Agregar Nuevo Servicio</h2>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <div style="padding-left:15%; padding-right:15%; padding-bottom:30px;">
                                <div class="row p-3 border-0">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </div>
                                <div class="form-group">
                                    <label>Servicio</label>
                                    <input asp-for="Nombre_serv" class="form-control" placeholder="Corte de Barba"/>
                                    <span asp-validation-for="Nombre_serv" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Descripcion</label>
                                    <textarea asp-for="Descripcion_serv" class="form-control" placeholder="Cualquier Corte de Barba"></textarea>
                                    <span asp-validation-for="Descripcion_serv" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Precio</label>
                                    <input asp-for="Precio" class="form-control" type="number" value="$" />
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer; text-center">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Crear Empleado</button><br />
                        </div>
                    </form>
                </div>
            </div>
        </div>



        <script src="https://unpkg.com/bootstrap-table@1.21.4/dist/bootstrap-table.min.js"></script>
    </body>
</html>