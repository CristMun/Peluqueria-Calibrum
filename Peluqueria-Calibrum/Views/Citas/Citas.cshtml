@using Peluqueria_Calibrum.Models
@model IEnumerable<CitaModel>
@{
    ViewData["Title"] = "Citas";
}
<head>
    <link rel="stylesheet" href="~/css/empleado.css">

</head>

<div class="card">
    <div class="card-header">
        <div class="card-title">
            <a>Administrar <span>Citas</span></a>
        </div>
        <div class="card-btn">
            <a class="waves-effect waves-light btn green lighten-1">
                <i class="fa-solid fa-circle-plus"></i>
                Nueva Cita
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="input-field col s4">
                <input id="Servicio" type="text" class="validate">
                <label for="Servicio">Servicio</label>
            </div>
            <div class="input-field col s4">
                <input id="Peluquero" type="text" class="validate">
                <label for="Peluquero">Peluquero</label>
            </div>
            <div class="input-field col s4">
                <a class="btn-floating btn-large waves-effect waves-light grey"><i class="fa-solid fa-magnifying-glass"></i></a>
            </div>
        </div>

        <table class="styled-table responsive-table">
            <thead>
                <tr>
                    <th>Hora</th>
                    <th>Servicio(s)</th>
                    <th>Datos Cliente</th>
                    <th>Precio</th>
                    <th>Acciones</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Hora @item.Dia</td>
                        <td>@item.Nombre_servicio</td>
                        <td>@item.Nombre_cliente <br />@item.Telefono</td>
                        <td>$@item.Precio_total</td>
                        <td>
                            <a class="btn btn-warning waves-effect waves-dark btn modal-trigger  amber lighten-2">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a class="btn btn-warning waves-effect waves-light btn modal-trigger red lighten-2">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
