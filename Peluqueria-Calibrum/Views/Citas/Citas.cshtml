@using Peluqueria_Calibrum.Models
@model IEnumerable<CitaModel>
@{
    ViewData["Title"] = "Citas";
}

<div class="card">
    <div class="text-center">
        <div>
            <h1>Lista de Citas</h1>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s4">
            <input id="Servicio" type="text" class="validate">
            <label for="Servicio">Servicio</label>
        </div>
        <div class="input-field col s4">
            <input id="Peluquero" type="text" class="validate">
            <label for="Peluquero">Peluquero</label>
        </div>
        <div class="input-field col s4" style="float: right">
            <a class="btn-floating btn-large waves-effect waves-light red"><i class="fa-solid fa-magnifying-glass"></i></a>
            <a class="btn-floating btn-large waves-effect waves-light red"><i class="fa-solid fa-plus"></i></a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Acciones</th>
                <th>Hora</th>
                <th>Servicio(s)</th>
                <th>Datos Cliente</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="btn btn-warning waves-effect waves-dark btn modal-trigger">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a class="btn btn-warning waves-effect waves-dark btn modal-trigger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                    <td>@item.Hora @item.Dia</td>
                    <td>@item.Nombre_servicio</td>
                    <td>@item.Nombre_cliente <br />@item.Telefono</td>
                    <td>$@item.Precio_total</td>
                </tr>
            }
        </tbody>
    </table>
